<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Metadados -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Estilos CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="styles/default.css"> <!-- Estilo padrão -->
    <link rel="stylesheet" href="styles/admin.css"> <!-- Estilo específico -->
    <!-- Título da página -->
    <title>Admin</title>
</head>

<body class="bg-white">
    <!-- Cabeçalho da página -->
    <div class="d-flex justify-content-between align-items-center p-3">
        <h1 class="mb-0">Tela do Admin</h1>
        <div>
            <!-- Botão para abrir modal de criar novo Admin -->
            <button type="button" class="btn btn-primary me-2" data-bs-toggle="modal" data-bs-target="#newAdmin">
                Criar novo Admin
            </button>
            <!-- Botão para logout -->
            <a href="/logout"><button class="btn btn-danger">Sair</button></a>
        </div>
    </div>

    <!-- Botão central -->
    <div class="d-flex justify-content-center align-items-center" style="height: 70vh;">
        <a href="/creation">
            <button class="btn btn-primary" style="width: 200px; height: 200px;">Criar</button>
            <button class="btn btn-primary" style="width: 200px; height: 200px;">Home</button>
        </a>
    </div>
    <!-- Modal para criar novo Admin -->
    {{#error}}
    <div id="newAdmin" class="modal">
    {{/error}}
    {{^error}}
    <div id="newAdmin" class="modal fade">
    {{/error}}
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title">Criar novo Admin</h3>
                    <button type="button" class="btn btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form action="/admin" method="post">
                        <div class="form-group mb-3">
                            <label for="user">Usuário</label>
                            <input id="user" name="user" type="text" class="form-control" />
                        </div>
                        <div class="form-group mb-3">
                            <label for="password">Senha</label>
                            <input id="password" name="password" type="password" class="form-control" />
                        </div>
                        {{#error}}<div class="alert alert-danger" role="alert">{{.}}</div>{{/error}}
                        <div class="mt-3 d-flex justify-content-between">
                            <button type="submit" class="btn btn-success flex-grow-1 me-2">Criar</button>
                            <button type="button" class="btn btn-danger flex-grow-1" data-bs-dismiss="modal">Fechar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    {{#error}}
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const adminModal = new bootstrap.Modal(document.getElementById('newAdmin'));
            adminModal.show();
        });
    </script>
    {{/error}}


</body>

</html>